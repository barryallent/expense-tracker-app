# ====================================
# Docker Compose Environment Variables
# ====================================
# Copy this file to .env and customize for your deployment
# Used by docker-compose.yml

# PostgreSQL Database
POSTGRES_DB=expense_tracker
POSTGRES_USER=expense_user
POSTGRES_PASSWORD=change_this_in_production

# Backend Configuration
DATABASE_URL=jdbc:postgresql://postgres:5432/expense_tracker
DATABASE_USERNAME=expense_user
DATABASE_PASSWORD=change_this_in_production

# JWT Secret (minimum 256 bits / 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=mySecretKey123456789012345678901234567890abcdef

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Port Mappings
BACKEND_PORT=9024
POSTGRES_PORT=7432

